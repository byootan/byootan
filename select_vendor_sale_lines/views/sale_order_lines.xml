<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_order_form_inherit_sale_supplier" model="ir.ui.view">
            <field name="name">sale.order.form.sale.supplier</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="groups_id" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="use_supplier_per_line" invisible="1"/>
                </xpath>
                <xpath expr="//page/field[@name='order_line']/tree//field[@name='name']" position="after">
                    <field name="selected_supplier_id" attrs="{'column_invisible': [('parent.use_supplier_per_line', '=', False)]}"/>
                </xpath>
                <xpath expr="//page/field[@name='order_line']/form//field[@name='product_id']" position="after">
                    <field name="selected_supplier_id" attrs="{'column_invisible': [('parent.use_supplier_per_line', '=', False)]}"/>
                </xpath>
           </field>
        </record>
    </data>
</odoo>
